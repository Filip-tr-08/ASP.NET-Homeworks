@model ReservationViewModel

<h3 style="color:white">Create reservation:</h3>

<div class="row">
    <div class="col-md-6" style="color:white">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="DateTimeBegin" class="custom-control-label"></label>
                <input asp-for="DateTimeBegin" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DateTimeEnd" class="custom-control-label"></label>
                <input asp-for="DateTimeEnd" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <select class="form-control" asp-for="PaymentMethod" asp-items="Html.GetEnumSelectList<PaymentMethod>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="ReservationMethod" class="control-label"></label>
                <select class="form-control" asp-for="ReservationMethod" asp-items="Html.GetEnumSelectList<ReservationMethod>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="MemberId" class="control-label"></label>
                <select asp-for="MemberId" asp-items="@(new SelectList(ViewBag.Members,"Id","MemberFullName"))"></select>
            </div>         
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>
