@model ReservationDetailsViewModel

<div class="text-center" style="color:white">
    <h2 class="display-4">Reservation Details:</h2>
</div>
<br />
<a asp-action="AddBook" asp-route-id="@Model.Id" class="btn-dark">Add Book</a>
<br />
<div class="card">
    <div class="card-body">
        <h5 class="card-title"><label asp-for="MemberFullName"></label>:@Model.MemberFullName</h5>
        <h6 class="card-subtitle mb-2 text-muted"><label asp-for="PaymentMethod"></label>@Model.PaymentMethod</h6>
        <h6 class="card-subtitle mb-2 text-muted">Reading @Model.ReservationMethod</h6>
        <p class="card-subtitle mb-2 text-muted"><label asp-for="DateTimeBegin"></label>;@Model.DateTimeBegin</p>
        <p class="card-subtitle mb-2 text-muted"><label asp-for="DateTimeEnd"></label>:@Model.DateTimeEnd</p>
    </div>
</div>
<br />
<div class="row">
    @foreach (var book in Model.Books)
    {
        <div class="card" style="width: 18rem; margin-left:15px;">
            <img class="card-img-top" src="@book.ImageLink" alt="Card image cap">
            <div class="card-body">
                <h4 class="text-center">@book.Title</h4>
            </div>
        </div>}
</div>